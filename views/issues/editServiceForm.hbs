<form method="POST" action="/issues/{{ issue.id }}?_method=PUT">

  <!--
    Template for creating input form for a string object key called stringMember
    NOTE: for numeric input fields use `type="number"`
  --->
    <input type="text" value="{{ issue.name }}" placeholder="Name" name="name"/><br/>
    <input type="text" value="{{ issue.phoneNum }}" placeholder="Phone Number" name="phoneNum"/><br/>
    <input type="text" value="{{ issue.email }}" placeholder="Email" name="email"/><br/>
    <input type="text" value="{{ issue.apptDate }}" placeholder="Appointment Date" name="apptDate"/><br/>
    <input type="text" value="{{ issue.notes }}" placeholder="Client Notes" name="notes"/><br/>
    <input type="text" value="{{ issue.skinType }}" placeholder="skinType" name="skinType"/><br/>

    <input type="submit" value="Update Client Profile"/>
</form>
