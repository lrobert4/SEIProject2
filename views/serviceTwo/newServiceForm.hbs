<form method="POST" action="/hair">

  <!--
    Template for creating input form for a string object key called stringMember
    NOTE: for numeric input fields use `type="number"`
  --->
    <input type="text" placeholder="Name" name="name"/><br/>
    <input type="text" placeholder="Phone Number" name="phoneNum"/><br/>
    <input type="text" placeholder="Email Address" name="email"/><br/>
    <input type="date" placeholder="Appointment Date" name="apptDate"/><br/>
    <input type="text" placeholder="Client Notes" name="notes"/><br/>
    <select name="hairType">
        <option value="Straight">Straight</option>
        <option value="Mixed Chick">Mixed Chick</option>
        <option value="Afro-Textured">Afro-Textured</option>
    </select>

    <input type="submit" value="Create Hair Client"/>
</form>